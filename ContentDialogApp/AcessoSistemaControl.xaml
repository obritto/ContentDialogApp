<UserControl
    x:Class="ContentDialogApp.AcessoSistemaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContentDialogApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="50"
                           Foreground="Navy" FontFamily="Segoe UI Symbol" Text="&#xE13D;" Margin="10,10,0,0" />
        <TextBox x:Name="textBoxUsuario" Margin="76,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PlaceholderText="Usuário"/>
        <PasswordBox x:Name="passwordBoxSenha" Margin="76,56,10,0" VerticalAlignment="Top" PlaceholderText="Senha"/>
        <HyperlinkButton x:Name="hyperEsqueci" Content="Esqueci a senha" HorizontalAlignment="Left" Margin="76,102,0,0" VerticalAlignment="Top" Click="hyperEsqueci_Click"/>
        <ProgressBar x:Name="progress" Height="10" Margin="10,148,10,0" VerticalAlignment="Top" IsIndeterminate="True" Visibility="Collapsed"/>

    </Grid>

</UserControl>
